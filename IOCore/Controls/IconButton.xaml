<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="IOCore.Controls.IconButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
>
    <Button x:Name="XButton"
            Width="{x:Bind ButtonWidth}" Height="{x:Bind ButtonHeight}" CornerRadius="{x:Bind ButtonCornerRadius}"
            Padding="0"
            BorderThickness="{x:Bind ButtonBorderThickness}" Background="{x:Bind ButtonBackground}"
            Flyout="{x:Bind Flyout}" Click="XButon_Click">
        <FontIcon Glyph="{x:Bind Icon, Mode=OneWay}" FontSize="{x:Bind IconSize}"/>
    </Button>
</UserControl>